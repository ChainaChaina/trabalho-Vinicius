
<div class="col col-md-8 col-md-offset-2 mt-3">
  <form [formGroup]="myForm" action='/node-mongodb-mongoose-user' method='post'>
    <div class="form-group">
      <label for="firstName">Nome:</label>
      <input
        type="text"
        id="firstName"
        name="firstName"
        class="form-control"
        formControlName="firstNameTS"
      />
    </div>
    <div class="form-group">
      <label for="lastName">SobreNome:</label>
      <input
        type="text"
        id="lastName"
        name="lastName"
        class="form-control"
        formControlName="lastNameTS"
      />
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        formControlName="emailTS"
      />
    </div>
    <div class="form-group">
      <label for="pass">Senha:</label>
      <input
        type="password"
        id="pass"
        name="password"
        class="form-control"
        formControlName="passwordTS"
      />
    </div>
    <button class="btn btn-primary" type="submit" [disabled]="!myForm.valid">
    <name class="bn btn-primary" type="submit" [disabled]="!myForm.valid">

      Cadastrar
    </button>
  </form>
</div>

